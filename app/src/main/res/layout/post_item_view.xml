<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="8dp"
    android:paddingVertical="8dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:id="@+id/profile_picture"
            tools:background="@mipmap/ic_launcher"
            android:layout_height="40dp"/>

        <TextView
            android:layout_width="0dp"
            tools:text="Luis Gerardo"
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/profile_user"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            tools:text="hace 2 horas"
            android:id="@+id/post_time_stamp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/post_image"
        tools:background="@mipmap/ic_launcher_round"
        android:layout_height="300dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:maxLines="4"
        android:id="@+id/post_description"
        android:ellipsize="end"
        tools:text="this is a photo description mucho texxto this is a photo description mucho texxto this is a photo description mucho texxto this is a photo description mucho texxto this is a photo description mucho texxto this is a photo description mucho texxto this is a photo description mucho texxto this is a photo description mucho texxto this is a photo description mucho texxto this is a photo description mucho texxto this is a photo description mucho texxto this is a photo description mucho texxto this is a photo description mucho texxto this is a photo description mucho texxto this is a photo description mucho texxto "
        android:layout_height="wrap_content"/>




</LinearLayout>